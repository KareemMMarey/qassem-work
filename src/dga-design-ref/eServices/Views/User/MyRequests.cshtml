@{
    ViewData["Title"] = "طلباتي - ";
}

<div class="pc-my-requests">
    <div class="pc-profile-header">
        <div class="pc-breadcrumbs">
            <ul>
                <li>
                    <a asp-controller="Home" asp-action="Index"> الصفحة الرئيسية </a>
                </li>
                <li>></li>
                <li class="pc-breadcrumbs-current">طلباتي</li>
            </ul>
        </div>

        <h1 class="pc-profile-title">طلباتي</h1>
    </div>

    <div class="pc-my-requests-body">
        <div class="pc-my-requests-header">
            <p>البحث</p>

            <div class="pc-search-container search-width" id="requestsSearch">
                <button type="submit" class="pc-search-btn" onclick="searchTable()">
                    <img src="~/icons/search.svg" alt="search" width="20" height="20" />
                </button>
                <input type="text" class="pc-search-input" placeholder="ابحث برقم الطلب" aria-label="Search">
                <button type="button" class="pc-clear-search-btn">
                    <img src="~/icons/xIcon.svg" alt="clear search" width="15" height="15" />
                </button>
            </div>

            @* <button type="button" class="">
                <img src="~/icons/filter.svg" alt="filter request" width="20" height="20" />
            </button> *@
        </div>

        <table class="pc-table my-requests-table">
            <thead>
                <tr>
                    <th>رقم</th>
                    <th>
                        <div class="pc-table-thead-icon">
                            <p>اسم الخدمة</p>
                            <img src="/icons/filter.svg" alt="filter" width="13" height="13">
                        </div>
                    </th>
                    <th>رقم الطلب</th>
                    <th>
                        <div class="pc-table-thead-icon">
                            <p>تاريخ الطلب </p>
                            <img src="/icons/sort.svg" alt="request date sort" width="13" height="13">
                        </div>
                    </th>
                    <th>
                        <div class="pc-table-thead-icon">
                            <p>حالة الطلب</p>
                            <img src="/icons/filter.svg" alt="request status filter" width="13" height="13">
                        </div>
                    </th>
                    <th>تفاصيل الطلب</th>
                </tr>
            </thead>

            <tbody id="requestsTableBody">
                <tr>
                    <td>1</td>
                    <td> طلب الخروج المؤقت للسجين</td>
                    <td class="break-word-cell">RR-RI241029010</td>
                    <td>2024-11-12</td>
                    <td class="pc-request-status">
                        <p class="pc-green-status">معتمد</p>
                    </td>
                    <td>
                        <div>
                            <a asp-controller="User" asp-action="RequestDetails" class="pc-borderless-btn"><img src="~/icons/arrowRightblc.svg" width="15" height="11"> تفاصيل</a>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>2</td>
                    <td> زواج سعودي من غير سعودية مولودة بالسعودية</td>
                    <td class="break-word-cell">RR-RI241029001</td>
                    <td>2024-11-12</td>
                    <td class="pc-request-status">
                        <p class="pc-blue-status">تحت المراجعة</p>
                    </td>
                    <td>
                        <div>
                            <a asp-controller="User" asp-action="RequestDetails" class="pc-borderless-btn"><img src="~/icons/arrowRightblc.svg" width="15" height="11"> تفاصيل</a>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>3</td>
                    <td> طلب الخروج المؤقت للسجين</td>
                    <td class="break-word-cell">RR-RI241029002</td>
                    <td>2024-11-12</td>
                    <td class="pc-request-status">
                        <p class=" pc-red-status">مرفوض</p>
                    </td>
                    <td>
                        <div>
                            <a asp-controller="User" asp-action="RequestDetails" class="pc-borderless-btn"><img src="~/icons/arrowRightblc.svg" width="15" height="11"> تفاصيل</a>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>4</td>
                    <td> طلب الخروج المؤقت للسجين</td>
                    <td class="break-word-cell">RR-RI241022003</td>
                    <td>2024-11-12</td>
                    <td class="pc-request-status">
                        <p class="pc-orange-status">يتطلب إكماله</p>
                    </td>
                    <td>
                        <div>
                            <a asp-controller="User" asp-action="RequestDetails" class="pc-borderless-btn"><img src="~/icons/arrowRightblc.svg" width="15" height="11"> تفاصيل</a>
                        </div>

                    </td>
                </tr>
                <tr>
                    <td>5</td>
                    <td> طلب الخروج المؤقت للسجين</td>
                    <td class="break-word-cell">RR-RI241022004</td>
                    <td>2024-11-12</td>
                    <td class="pc-request-status">
                        <p class="pc-grey-status">غير مختص</p>
                    </td>
                    <td>
                        <div>
                            <a asp-controller="User" asp-action="RequestDetails" class="pc-borderless-btn"><img src="~/icons/arrowRightblc.svg" width="15" height="11"> تفاصيل</a>
                        </div>

                    </td>
                </tr>
            </tbody>
        </table>

        <div class="pc-empty-state">
            <div class="pc-empty-state-message">
                <h2>لاتوجد نتائج</h2>
                <p>لا توجد طلبات مطابقة للرقم المدخل، يرجى التحقق من الرقم والمحاولة مرة أخرى. </p>
                <button class="pc-outline-btn" id="clear-search-field-btn">محو حقل البحث</button>
            </div>
        </div>
    </div>

    <div class="pc-back-btn-container">
        <button class="pc-outline-btn"> <a asp-controller="Home" asp-action="Index">الرجوع</a></button>
    </div>
</div>
