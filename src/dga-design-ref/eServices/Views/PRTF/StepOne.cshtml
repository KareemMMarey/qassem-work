@{
    ViewData["Title"] = "بيانات مقدم الطلب - ";
}

<div class="pc-service-steps-page">
    <div class="pc-breadcrumbs">
        <ul>
            <li>
                <a asp-controller="Home" asp-action="Index"> الصفحة الرئيسية </a>
            </li>
            <li>></li>
            <li>
                <a asp-controller="Services" asp-action="Index"> الخدمات</a>
            </li>
            <li>></li>
            <li class="pc-breadcrumbs-current">طلب نقل سجين من سجن لآخر</li>
        </ul>
    </div>

    <div class="pc-service-steps-container">
        <div class="pc-service-steps-progress">
            <div class="pc-step active">
                <div class="pc-step-circle">1</div>
                <div class="label">
                    <h6>الخطوة الأولى</h6>
                    <p>بيانات مقدم الطلب</p>
                </div>
            </div>

            <div class="pc-step-line"></div>

            <div class="pc-step">
                <div class="pc-step-circle">2</div>
                <div class="label">
                    <h6>الخطوة الثانية</h6>
                    <p>بيانات المعني بالطلب</p>
                </div>
            </div>

            <div class="pc-step-line"></div>

            <div class="pc-step">
                <div class="pc-step-circle">3</div>
                <div class="label">
                    <h6>الخطوة الثالثة</h6>
                    <p>إرفاق المستندات</p>
                </div>
            </div>

            <div class="pc-step-line"></div>

            <div class="pc-step">
                <div class="pc-step-circle">4</div>
                <div class="label">
                    <h6>الخطوة الرابعة</h6>
                    <p>مراجعة الطلب</p>
                </div>
            </div>
        </div>

        @* Mobile progress bar *@
        <div class="pc-service-steps-progress-mobile">
            <div class="progress-circle">
                <img src="~/icons/step1of4.svg" alt="progress" />
            </div>
            <div class="text-section">
                <h5>الخطوة الأولى</h5>
                <p>بيانات مقدم الطلب</p>
                <p class="next-step">التالي: بيانات المعني بالطلب</p>
            </div>
        </div>

        <div class="pc-service-form pc-basic-container">
            <div class="pc-service-form-heading">
                <h3>طلب نقل سجين من سجن لآخر</h3>
                <p>طلب يتقدم به قريب السجين يلتمس فيه نقل السجين من سجنه الحالي إلى سجن آخر</p>

                <div class="pc-form-line"></div>

                <p class="pc-warning-text">* المعلومات المطلوبة</p>
                <h4>بيانات مقدم الطلب</h4>
            </div>

            <form action="" method="" id="PR-TF-step1-form" class="pc-form">
                <div class="pc-form-grid-2col">
                    <div class="custom-select pc-full-width-input">
                        <div class="pc-input-label"> <span class="required">*</span> صفة مقدم الطلب</div>

                        <button id="dropdown-button" class="select-button" role="combobox" aria-label="select button"
                                aria-haspopup="listbox" aria-expanded="false" aria-controls="select-dropdown">
                            <span class="selected-value">اختر...</span>
                            <span class="arrow"><img src="~/icons/arrowDown.svg" /></span>
                        </button>

                        <ul class="select-dropdown hidden" role="listbox" id="select-dropdown" aria-labelledby="dropdown-button">
                            <li role="option">أصالة عن نفسه</li>
                            <li role="option">وكيل</li>
                            <li role="option">محامي</li>
                            <li role="option">قريب من الدرجة الأولى</li>
                        </ul>

                        <div class="error"></div>
                    </div>

                    <div class="pc-input">
                        <label for="name" class="pc-input-label">الاسم الرباعي</label>
                        <input type="text" id="name" name="name" class="pc-auto-filled-input" value="عبدالله احمد محمد الأحمد" readonly>
                        <span class="pc-service-form-tooltip">تم استرداد المعلومات من مركز المعلومات الوطني</span>
                    </div>

                    <div class="pc-input">
                        <label for="nationality" class="pc-input-label">الجنسية</label>
                        <input type="text" id="nationality" name="nationality" class="pc-auto-filled-input" value="المملكة العربية السعودية" readonly>
                        <span class="pc-service-form-tooltip">تم استرداد المعلومات من مركز المعلومات الوطني</span>
                    </div>

                    <div class="pc-input">
                        <label for="idNumber" class="pc-input-label">رقم الهوية</label>
                        <input type="text" id="idNumber" name="idNumber" class="pc-auto-filled-input" value="1109882374" readonly>
                        <span class="pc-service-form-tooltip">تم استرداد المعلومات من مركز المعلومات الوطني</span>
                    </div>

                    <div class="pc-input">
                        <label for="birthdate" class="pc-input-label">تاريخ الميلاد</label>
                        <input type="text" id="birthdate" name="birthdate" class="pc-auto-filled-input" value="1998-05-19" readonly>
                        <span class="pc-service-form-tooltip">تم استرداد المعلومات من مركز المعلومات الوطني</span>
                    </div>

                    <div class="pc-input">
                        <label for="phone" class="pc-input-label"> <span class="required">*</span> رقم الجوال</label>
                        <input type="text" id="phone" name="phone" placeholder="05xxxxxxxx">
                        <div class="error"></div>
                    </div>

                    <div class="pc-input">
                        <label for="email" class="pc-input-label">البريد الإلكتروني</label>
                        <input type="text" id="email" name="email" placeholder="example@mail.com">
                        <div class="error"></div>
                    </div>

                    <div class="pc-input">
                        <label for="city" class="pc-input-label">المدينة</label>
                        <input type="text" id="city" name="city" class="pc-auto-filled-input" value="بريدة" readonly>
                        <span class="pc-service-form-tooltip">تم استرداد المعلومات من البريد السعودي</span>
                    </div>

                    <div class="pc-input">
                        <label for="district" class="pc-input-label">الحي</label>
                        <input type="text" id="district" name="district" class="pc-auto-filled-input" value="حي الصفراء" readonly>
                        <span class="pc-service-form-tooltip">تم استرداد المعلومات من البريد السعودي</span>
                    </div>
                </div>

                <div class="pc-form-buttons">
                    <a asp-controller="Services" asp-action="AboutTheService" asp-route-id="PRTF" class="pc-outline-btn">إلغاء</a>
                    <button type="submit" class="pc-primary-btn">التالي</button>
                </div>
            </form>
        </div>
    </div>
</div>
