 @using Microsoft.AspNetCore.Localization;
@using QassimPrincipality.Web.ViewModels.Inquery
@model InqueryVM
@{
    ViewData["Title"] = "استعلام عن استدعاء";
}
<div class="row justify-content-xxl-center">
    <div class="col-xxl-10">
        <div class="page-panel">
            <h3 class="page-title margin-bottom-lg">استعلام عن استدعاء</h3>

            
            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger">
                    
                    <span> @ViewBag.ErrorMessage </span>
                </div>
            }
            <form asp-action="InqueryRequest" class="form" enctype="multipart/form-data">
                <div class="row">
                   
                    <div class="col-xl-6">
                        <div class="form-group">
                            <label asp-for="RecordNo" class="form-label">رقم وارد المعاملة	</label>
                            <input asp-for="RecordNo" class="form-control" placeholder="رقم وارد المعاملة" />
                            <span asp-validation-for="RecordNo" class="text-danger"></span>
                        </div>
                    </div>
                   
                    <div class="col-xl-6">
                        <div class="form-group">
                            <label asp-for="NationalNo" class="form-label">رقم الهوية</label>
                            <input asp-for="NationalNo" class="form-control" placeholder="رقم الهوية" />
                            <span asp-validation-for="NationalNo" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="col-xl-12">

                        <div class="form-group">
                            <input type="submit" value="استعلام" class="btn btn-primary" />
                           
                        </div>
                    </div>
                </div>
            </form>

            @if (ViewBag.RequestStatus != null)
            {
                <div class="alert alert-success">
                    <span>حالة الطلب</span>
                    <span> @ViewBag.RequestStatus </span>
                </div>
            }
        </div>
    </div>
</div>


