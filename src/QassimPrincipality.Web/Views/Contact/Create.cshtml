
@using QassimPrincipality.Application.Services.Lookups.Main.RequestType.Dto;
@using QassimPrincipality.Web.ViewModels.Contact;
@model AddContactVM
@{
    ViewData["Title"] = "Add a new Request";
}

<div class="row justify-content-xxl-center">
    <div class="col-xxl-10">
        <div class="page-panel">
            <h3 class="page-title margin-bottom-lg">شكوى</h3>
            <form id="client-form" class="form" asp-controller="Contact" asp-action="Create" Method="post">
                <div class="row">
                    @if (ViewData["contacttypes"] != null)
                    {
                        var types = (List<SelectListItem>)ViewData["contacttypes"];
                        <div class="col-xl-6">
                            <div id="RequestType" class="form-group">
                                <label class="form-label" asp-for="ContactTypeId">
                                    نوع الطلب
                                </label>

                                <select asp-for="ContactTypeId" required asp-items="@(new SelectList(types, "Value", "Text"))"
                                        class="form-control" id="ddlContactTypes">
                                </select>
                                <span asp-validation-for="ContactTypeId" class="text-danger"></span>

                            </div>
                        </div>
                    }

                    <div class="col-xl-6">
                        <div class="form-group">
                            <label class="form-label" asp-for="UserFullName">
                                اسم
                            </label>
                            <input type="text" class="form-control col-8 text-box single-line" asp-for="UserFullName">
                            <span asp-validation-for="UserFullName" class="field-validation-valid text-danger"> </span>
                        </div>
                    </div>

                    <div class="col-xl-6">
                        <div class="form-group">


                            <label class="form-label" asp-for="UserEmail">
                                البريد إلكتروني
                            </label>

                            <input type="text" class="form-control col-8 text-box single-line" asp-for="UserEmail">
                            <span asp-validation-for="UserEmail" class="field-validation-valid text-danger"> </span>
                        </div>
                    </div>
                    <div class="col-xl-6">
                        <div class="form-group">
                            <label class="form-label" asp-for="IdentityNumber">
                                رقم الهوية / الإقامة
                            </label>

                            <input type="text" class="form-control col-8 text-box single-line" asp-for="IdentityNumber">
                            <span asp-validation-for="IdentityNumber" class="field-validation-valid text-danger"> </span>
                        </div>
                    </div>

                    <div class="col-xl-6">
                        <div class="form-group">
                            <label class="form-label" asp-for="UserMobile">
                                رقم الجوال
                            </label>

                            <input type="text" class="form-control col-8 text-box single-line" asp-for="UserMobile">
                            <span asp-validation-for="UserMobile" class="field-validation-valid text-danger"> </span>
                        </div>
                    </div>

                    <div class="col-xl-6">
                        <div class="form-group">
                            <label class="form-label" asp-for="ContactTitle">
                                عنوان الشكوى
                            </label>

                            <input type="text" class="form-control col-8 text-box single-line" asp-for="ContactTitle">
                            <span asp-validation-for="ContactTitle" class="field-validation-valid text-danger"> </span>
                        </div>
                    </div>
                    @* <div class="form-group">
                    <label class="form-label" asp-for="Description">
                    >ملخص الشكوى
                    </label>
                    <div class="col-sm-8">


                    <textarea  class="form-control col-8" cols="20"  id="Note" maxlength="150" minlength="3" name="Note" asp-for="Description" placeholder="ملخص الشكوى" rows="4"></textarea>
                    <span asp-validation-for="Description" class="field-validation-valid text-danger"> </span>
                    </div>
                    </div> *@
                    <div class="col-xl-12">
                        <div class="form-group">
                            <label asp-for="Description" class="control-label">ملخص الشكوى</label>
                            <textarea asp-for="Description" class="form-control"></textarea>
                            <span asp-validation-for="Description" class="field-validation-valid text-danger"> </span>
                        </div>
                    </div>




                    @*  <div class="form-group">
                    <label for="inputPassword3" class="form-label">تقييم الخدمة</label>
                    <div class="col-md-6 rating" style="justify-content:flex-end !important">
