@using QassimPrincipality.Web.ViewModels.Account

@model LoginVM
@inject IViewLocalizer localizer

@{
    ViewData["Title"] = localizer["Login"];
}
<div class="account-login">
    <div class="row justify-content-xxl-center">
        <div class="col-xxl-8">
            <div class="page-panel">
                <h3 class="page-title margin-bottom-lg">@localizer["VerificationCode"]</h3>
                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger">
                        <span><b>@localizer["Sorry"]</b> - @TempData["Error"] </span>
                    </div>
                }
                <form asp-action="VerifyOtp" class="form">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="EmailAddress" />

                    <div class="form-group">
                        <label asp-for="OTP" class="form-label">@localizer["VerificationCode"]</label>
                        <input asp-for="OTP" class="form-control" />
                        <span asp-validation-for="OTP" class="text-danger"></span>
                    </div>

                    <div id="timerdiv" style=" text-align: center; margin-top: 20px;">
                        <span id="timer" style="font-size: 60px;
                                        color: #777575;
                                        font-family: 'inherit';">04:43</span>
                    </div>

                    <div class="form-group">
                        <input class="btn btn-primary" type="submit" value="@localizer["Confirm"]" />
                        <a class="btn btn-outline-primary" asp-controller="Movies" asp-action="Index">@localizer["Cancel"]</a>
                    </div>
                </form>

                <form action="" method="post">
                    <input name="email" id="email" value="@Model.EmailAddress" type="hidden">
                    <div class="col-md-12 otpnum" id="otp" style="display: flex; justify-content: center; gap: 3px; align-items: center; color: rgb(69, 71, 117);">
                        @localizer["DidNotReceiveCode"]
                        <button id="resend" type="submit"
                                style="padding: 0px; margin: 0px; border: none; background-color: transparent; text-decoration: underline; color: rgb(69, 71, 117);"
                                formaction="/Account/RsendOtpToUser">
                            @localizer["Resend"]
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    let timerOn = true;
    $("#resend").hide();
    $(".otpnum").hide();
    $("#timerdiv").show();
    function timer(remaining) {
        var m = Math.floor(remaining / 60);
        var s = remaining % 60;

        m = m < 10 ? '0' + m : m;
        s = s < 10 ? '0' + s : s;
        document.getElementById('timer').innerHTML = m + ':' + s;
        remaining -= 1;

        if (remaining >= 0 && timerOn) {
            setTimeout(function () {
                timer(remaining);
            }, 1000);
            return;
        }

        if (!timerOn) {
            return;
        }

        $("#resend").show();
        $(".otpnum").show();
        $("#timerdiv").hide();
    }

    timer(300);
</script>
