@using Framework.Identity.Data.Dtos
@model List<RoleDto>
@{
    ViewData["Title"] = "القائمة";
}
<div class="row justify-content-xxl-center">
    <div class="col-xxl-12">
        <div class="page-panel" id="elementToToggle">
            <h3 class="page-title margin-bottom-lg"> القائمة </h3>
            <table class="table">
                <thead>
                    <tr>
                        <th>اسم الصلاحية</th>
                        <th style="width: 200px;"></th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <tr>

                            <td>@Model[i].Name</td>
                            <td>
                                <a class="btn btn-sm btn-outline-primary" href="@Url.Action("Create", "Roles")">
                                    إضافة صلاحية
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>



