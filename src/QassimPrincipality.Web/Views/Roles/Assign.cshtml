@using QassimPrincipality.Web.ViewModels.Roles
@model List<RoleAssignViewModel>

@{
    ViewData["Title"] = "تعيين صلاحية";
    // Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="row justify-content-xxl-center">
    <div class="col-xxl-10">
        <div class="page-panel">
            <h3 class="page-title margin-bottom-lg">تعيين الصلاحية للمستخدم - @ViewBag.Username</h3>

            @if (0 >= Model.Count)
            {
                <h3 class="h3">الصلاحيات غير موجودة!</h3>
            }
            else
            {
                <form asp-action="Assign" method="post" class="form">

                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <div class="align-items-center d-flex gap-2">
                            <input asp-for="@Model[i].Exist" id="@Model[i].Id" type="checkbox" class="form-check-input" />
                            <label asp-for="@Model[i].Id" for="@Model[i].Id" class="form-check-label">@Model[i].Name</label>

                            <input asp-for="@Model[i].Name" type="hidden" />
                            <input asp-for="@Model[i].Id" type="hidden" />
                        </div>
                    }
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">تعيين صلاحية</button>
                    </div>
                </form>
            }
        </div>
    </div>
</div>


