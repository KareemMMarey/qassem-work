@using QassimPrincipality.Web.ViewModels.Roles
@model List<RoleAssignViewModel>

@{
    ViewData["Title"] = "تعيين صلاحية";
    // Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="mb-3">تعيين الصلاحية للمستخدم - @ViewBag.Username</h1>

@if (0 >= Model.Count)
{
    <h3 class="h3">الصلاحيات غير موجودة!</h3>
}
else
{
    <form asp-action="Assign" method="post" class="my-2">

        @for (int i = 0; i < Model.Count; i++)
        {
            <div class="form-check my-1">
                <input asp-for="@Model[i].Exist" type="checkbox" class="form-check-input" />
                <label asp-for="@Model[i].Id" class="form-check-label">@Model[i].Name</label>

                <input asp-for="@Model[i].Name" type="hidden" />
                <input asp-for="@Model[i].Id" type="hidden" />
            </div>
        }

        <button type="submit" class="btn btn-sm btn-secondary mt-2">تعيين صلاحية</button>
    </form>
}