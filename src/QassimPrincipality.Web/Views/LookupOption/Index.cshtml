        <div class="d-flex justify-content-end mb-3">
            <a asp-action="Create" class="pc-primary-btn">@localizer["CreateNewLookupOption"]</a>
        </div>

        <table class="pc-table my-requests-table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>@localizer["ArabicName"]</th>
                    <th>@localizer["EnglishName"]</th>
                    <th>@localizer["Type"]</th>
                    <th>@localizer["IsActive"]</th>
                    <th>@localizer["Actions"]</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Count > 0)
                {
                    int index = 1;
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@index</td>
                            <td>@item.NameAr</td>
                            <td>@item.NameEn</td>
                            <td>@WorkFlowHelper.GetLookupTypeDisplay(item.LookupOptionType, localizer)</td>
                            <td>@(item.IsActive ? localizer["Yes"] : localizer["No"])</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="pc-outline-btn">@localizer["Edit"]</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="pc-outline-btn">@localizer["Delete"]</a>
                            </td>
                        </tr>
                        index++;
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center">@localizer["NoResults"]</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
