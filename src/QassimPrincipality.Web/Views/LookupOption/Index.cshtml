    <div class="pc-profile-header">
        <div class="pc-breadcrumbs">
            <ul>
                <li><a asp-controller="Home" asp-action="Index">@localizer["Home"]</a></li>
                <li>></li>
                <li class="pc-breadcrumbs-current">@localizer["LookupOptions"]</li>
            </ul>
        </div>
        <h1 class="pc-profile-title">@localizer["LookupOptions"]</h1>
    </div>

    <div class="pc-my-requests-body">
