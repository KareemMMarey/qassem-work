@inject IViewLocalizer localizer

@{
    ViewBag.Title = localizer["SuccessRequestPage"];
    var requestNumber = ViewBag.RequestNumber.ToString();
}

<div class="success-container">
    <div class="success-icon">
        <i class="fas fa-check-circle"></i>
    </div>
    <h1>@localizer["SuccessMessage"]</h1>
    <p>@localizer["RequestSubmittedSuccessfully"]</p>
    <div class="request-number">
        <strong>@localizer["YourRequestNumber"]:</strong> <span>@requestNumber</span>
    </div>
    <div class="success-actions">
        <a href="/Home" class="btn btn-primary">@localizer["BackToHome"]</a>
        <a href="/Request/Status" class="btn btn-secondary">@localizer["CheckRequestStatus"]</a>
    </div>
</div>

<!-- Add the success styles -->
<style>
    .success-container {
        text-align: center;
        padding: 40px;
        margin: 50px auto;
        max-width: 600px;
        background-color: #f9f9f9;
        border-radius: 10px;
        box-shadow: 0 2px 20px rgba(0,0,0,0.2);
    }

    .success-icon {
        font-size: 80px;
        color: #28a745;
        margin-bottom: 20px;
    }

    .request-number {
        margin-top: 20px;
        font-size: 18px;
        color: #555;
    }

    .success-actions {
        margin-top: 30px;
    }

        .success-actions .btn {
            margin: 10px 5px;
            padding: 10px 30px;
            font-size: 16px;
            border-radius: 25px;
            text-transform: uppercase;
            transition: background-color 0.3s ease;
        }

        .success-actions .btn-primary {
            background-color: #28a745;
            color: #fff;
            border: none;
        }

        .success-actions .btn-secondary {
            background-color: #6c757d;
            color: #fff;
            border: none;
        }

        .success-actions .btn-primary:hover {
            background-color: #218838;
        }

        .success-actions .btn-secondary:hover {
            background-color: #5a6268;
        }
</style>
