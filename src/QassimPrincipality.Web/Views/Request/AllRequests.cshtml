        <table class="pc-table my-requests-table">
            <thead>
                <tr>
                    <th>رقم</th>
                    <th>
                        <div class="pc-table-thead-icon">
                            <p>  @localizer["ServiceName"] </p>
                            <img src="/icons/filter.svg" alt="filter" width="13" height="13">
                        </div>
                    </th>
                    <th> @localizer["RequestNumber"]  </th>
                    <th>
                        <div class="pc-table-thead-icon">
                            <p> @localizer["RequestDate"]   </p>
                            <img src="/icons/sort.svg" alt="request date sort" width="13" height="13">
                        </div>
                    </th>
                    <th>
                        <div class="pc-table-thead-icon">
                            <p> @localizer["RequestStatus"]  </p>
                            <img src="/icons/filter.svg" alt="request status filter" width="13" height="13">
                        </div>
                    </th>
                    <th> @localizer["RequestDetails"]  </th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Results.Count>0)
                {
                    int rowNumber = 1;
                    foreach (var request in Model.Results)
                    {
                        <tr>
                            <td>@rowNumber</td>
                            <td> @(currentCulture == "ar-SA" ? @request.ServiceNameAr : @request.ServiceNameEn) </td>
                            <td class="break-word-cell"> @request.RequestNumber</td>
                            <td>@request.CreatedOn.ToString("yyyy-MM-dd")</td>
                            <td class="pc-request-status">
                                <p class="@WorkFlowHelper.GetStatusClass(request.Status)">
                                    @WorkFlowHelper.GetStatusDisplay(request.Status,localizer)
                                </p>
                            </td>
                            <td>
                                <div>
                                    <a asp-controller="Request" asp-action="Details" asp-route-requestid= "@request.Id" class="pc-borderless-btn">
                                        <img src="~/icons/arrowRightblc.svg" width="15" height="11" /> @localizer["DetailsButton"]
                                    </a>
                                </div>
                            </td>
                        </tr>
                        rowNumber++;
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center">    @localizer["NoRequests"] </td>
                    </tr>
                }
            </tbody>
