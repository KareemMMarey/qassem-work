@using Microsoft.AspNetCore.Localization;
@using QassimPrincipality.Application.Services.Lookups.Main.RequestType.Dto;
@using QassimPrincipality.Web.ViewModels.Request;
@model AddRequestViewModel
@{
    ViewData["Title"] = "Add a new Request";
}

<div class="row text" style="direction:rtl;">
    <div class="col-md-8 offset-2">
        <p>
            <h1>إنشاء طلب جديد</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Create" enctype="multipart/form-data">
                    @* <div asp-validation-summary="ModelOnly" class="text-danger"></div>
 *@
                    <div class="form-group text-center">
                        <img id="CinemaLogoPreview" class="border-info rounded-circle" style="max-width: 150px" />
                    </div>

                                            <select asp-for="RequestTypeId" required asp-items="@(new SelectList(requestTypes, "Id", "NameAr"))"
                                                    class="form-control" id="ddlentity">
                                            </select>

                    <!-- Select Request Types-->
                    @if (ViewData["RequestTypes"] != null)
                    {
                        var requestTypes = (List<RequestTypeDto>)ViewData["RequestTypes"];
                        <div class="form-group">
                            <div id="RequestType" class="form-group">
                                <label asp-for="RequestTypeId">
                                    نوع الطلب
                                </label>

                                <select asp-for="RequestTypeId" required asp-items="@(new SelectList(requestTypes, "Id", "NameAr"))"
                                        class="form-control" id="ddlentity">
                                </select>
                                @* <span asp-validation-for="RequestTypeId" class="text-danger"></span>
 *@
                            </div>
                        </div>
                    }

                    <div class="form-group">
                        <label asp-for="RequestName" class="control-label">عنوان الطلب	</label>
                        <input asp-for="RequestName" class="form-control" />
                        <span asp-validation-for="RequestName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PhoneNumber" class="control-label">رقم الهاتف</label>
                        <input asp-for="PhoneNumber" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NafathNumber" class="control-label">رقم الهوية</label>
                        <input asp-for="NafathNumber" class="form-control" />
                        <span asp-validation-for="NafathNumber" class="text-danger"></span>
                    </div>@* 
                    <div class="form-group">
                        <label class="control-label">اسم المستخدم</label>
                        @{
                            string userName = "Guest";
                            if (Context.User != null)
                            {
                            userName = Context.User.Identity.Name;
                            }
                        }
                        <label class="control-label">@userName</label>
                    </div> *@
                    <div class="form-group">
                        <label asp-for="Photo" class="control-label">الصورة الشخصية</label>
                        <input asp-for="Photo" class="form-control" accept=".png,.jpg,.jpeg" />
                        <span asp-validation-for="Photo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ListAttachments">مرفقات اخرى</label>
                        <input class="form-control" asp-for="ListAttachments" accept=".png,.jpg,.jpeg,.pdf" />
                        <span asp-validation-for="ListAttachments" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="تقديم طلب" class="btn btn-outline-success float-right" />
                       @*  <a class="btn btn-outline-secondary" asp-action="Index">عرض الكل</a> *@
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
</div>

