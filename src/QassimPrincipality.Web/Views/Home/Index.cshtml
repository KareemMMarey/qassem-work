@using QassimPrincipality.Application.Services.Lookups.Main.EServiceCategory
@{
    ViewData["Title"] = "إمازة منطقة القصيم | الصفحة الرئيسية";
}

<h3 class="page-title margin-bottom-lg">
    الخدمات الإلكترونية لإمارة منطقة القصيم
</h3>

<div class="container">
    <div class="services-list">
        <div class="row">
            @if (ViewData["categories"] != null)
            {
                var categories = (List<EServiceCategoryDto>)ViewData["categories"];
                foreach (EServiceCategoryDto item in categories)
                {
                    <div class="col-xxl-3">
                        <a class="services-card"  href="@Url.Action("SubCategories", "Home", new
                                             {                                                     // htmlAttributes
                                                 categoryId = item.Id,
                                             })">
                       @*  <a class="services-card" href="#"> *@
                            <div class="service-card__icon">
                                <svg width="24" height="24">
                                    <use xlink:href="/assets/images/svg-icons.svg#logo"> </use>
                                </svg>
                            </div>
                            <div class="service-card__title"> @item.NameAr</div>
                        </a>
                    </div>
                }
            }
        </div>
    </div>
</div>

